    "eslint-plugin-react": "^7.37.5",
    "globals": "^16.4.0",
    "husky": "^8.0.3",
    "jest": "^30.2.0",
    "lint-staged": "^16.2.0",
    "prettier": "^3.6.2",
    "supertest": "^7.1.4",
    "typescript-eslint": "^8.44.1"
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx,vue}": [
      "eslint --fix",
      "prettier --write"
